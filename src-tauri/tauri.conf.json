{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LoadSh.it Desktop",
  "version": "2.0.0",
  "identifier": "com.loadshit.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "LoadSh.it Desktop",
        "width": 900,
        "height": 750,
        "minWidth": 36,
        "minHeight": 36,
        "resizable": true,
        "center": true,
        "decorations": false,
        "transparent": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' https: data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Video Downloader",
    "longDescription": "Free & Open Source Video Downloader for YouTube, TikTok, Instagram and 1000+ sites"
  },
  "plugins": {
    "shell": {
      "open": ".*"
    }
  }
}
