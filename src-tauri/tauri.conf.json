{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LoadSh.it Desktop",
  "version": "1.0.0",
  "identifier": "com.loadshit.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "LoadSh.it Desktop",
        "width": 900,
        "height": 700,
        "resizable": true,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https: data:; style-src 'self' 'unsafe-inline'; script-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "yt-dlp",
          "cmd": "yt-dlp",
          "args": true
        },
        {
          "name": "ffmpeg",
          "cmd": "ffmpeg",
          "args": true
        }
      ]
    }
  }
}
